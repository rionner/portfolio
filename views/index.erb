<script>
  $(document).ready(function() {
    var largePhotos = <%= @large_photos.to_json %>
    var i = 0;
    var shuffled;

    function shuffleArray(array) {
      for (var i = array.length - 1; i > 0; i--) {
        var j = Math.floor(Math.random() * (i + 1));
        var temp = array[i];
        array[i] = array[j];
        array[j] = temp;
      }
      return shuffled = array;
    }
    function setBackground(array) {
      $('.home-background-1').css("background-image", "url(" + array[i] + ")");
      // $('.home-background-2').css("opacity", "url(" + array[i++] + ")");
      i++;
      if(i === array.length) i = 0;
    }

    shuffleArray(largePhotos);
    setInterval(function(){
      setBackground(shuffled);
    }, 5000);
  });
</script>


